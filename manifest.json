{
  "manifest_version": 3,
  "name": "Tweet Scraper",
  "version": "1.0",
  "permissions": ["scripting", "activeTab", "downloads"],
  "host_permissions": ["https://*.twitter.com/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
